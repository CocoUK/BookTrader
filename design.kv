<MainScreen>:
    GridLayout:
        cols: 1
        
        GridLayout:
            cols: 1
            Label:
                id:'title'
                text: "Coco Book Trader App"
        
        GridLayout:
            cols: 2
            Label:
                id:"items"
                text: "Nuber items"
            Label:
                id:"total"
                text: "Â£"
        
        GridLayout:
            cols: 1
            TextInput:
                hint_text: "Enter barcode"
            BoxLayout:
                orientation: 'vertical'             
             
        GridLayout:
            cols: 5
            Button:
                text:"Scan"
            Button:
                text: "Trade"
            Button:
                text: "Log in"
                on_press: root.go_to_login()
            Button:
                text: "Sign up"
                on_press: root.sign_up()
            Button:
                text: "About"

<SignUpScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Welcome to Coco Book Trade App"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: email
            hint_text: "E-mail address"
        TextInput:
            id: password
            hint_text: "Password"
        Label:
            id: info
            text: "Write some info here"
        Button:
            text: "Sign up"
            on_press: root.add_user(root.ids.username, root.ids.password, root.ids.email)
        
<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text: "Sign up succesfully"
        Button:
            text: "Login page"
            on_press: root.go_to_login()

<LoginScreen>:
    GridLayout: 
        cols: 1
        GridLayout:
            cols:1
            Label:
                text: "Login to take advantage of Coco Book Trade App features"
            TextInput:
                id: uname
                hint_text: "Username"
            TextInput:
                id: pword
                hint_text: "Password"
            Label:
                id: login_wrong
                text: ""
            Button:
                text: "Login"
                on_press: root.login(root.ids.uname.text, root.ids.pword.text)
        
        GridLayout:
            cols:2
            Button:
                text: "Forgot password"
                on_press: root.forgot_password()
            Button:
                text: "Sign up"
                on_press: root.sign_up()

<ForgotPwordScreen>
    GridLayout:
        cols:1
        GridLayout:
            cols: 1
            Label:
                text: "Enter your email address"
            TextInput:
                id: email
                hint_text: "e-mail"
            Label:
                id: info
                text: ""
            Button:
                text: "Send me my details"
                on_press: root.send_details(root.ids.email.text)

            GridLayout:
                cols:2
                Button:
                    text: "Login"
                    on_press: root.go_to_login()
                Button:
                    text: "Signup"
                    on_press: root.sign_up()


<RootWidget>:
    MainScreen:
        name: "main_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreen:
        name: "login_screen"
    ForgotPwordScreen:
        name: "Forgot_password_screen"
    









